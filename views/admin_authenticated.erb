    <script src='/scripts/models/PartyModel.js'></script>
    <script src='/scripts/models/OrderModel.js'></script>

    <!-- ****** Backbone Collection ****** -->
    <script src='/scripts/collections/FoodCollection.js'></script>
    <script src='/scripts/collections/PartyCollection.js'></script>
    <script src='/scripts/collections/OrderCollection.js'></script>

    <!-- ****** Backbone Views ****** -->
    <script src='/scripts/views/MenuFoodView.js'></script>
    <script src='/scripts/views/OrderFoodView.js'></script>
    <script src='/scripts/views/PartyView.js'></script>
    <script src='/scripts/views/OrderView.js'></script>
    <script src='/scripts/views/ListView.js'></script>
    <script src='/scripts/views/OrderListView.js'></script>
    <script src='/scripts/views/PullDownView.js'></script>

