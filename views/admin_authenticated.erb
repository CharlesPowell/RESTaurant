<html>
  <head>
    <title>RESTaurant</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
  </head>
  <body>

    <div class="column" id = 'menu-column'>
      <ul class='list-view' id='food-list'>

      </ul>
    </div>

    <h2>Greetings Manager</h2>

    <form action="/sessions" method='post'>
      <input type="hidden" name='_method' value='delete'>
      <input type="submit" value='log-out'>
    </form>

    <form action="/api/foods" method="post">
      <input type="text" name="food[name]" placeholder="name...">
      <input type="text" name="food[price]" placeholder="price...">
      <input type="submit" value="add food">
    </form>

    <!-- ****** JS Libraries ****** -->
    <script src='/scripts/lib/jquery.js'></script>
